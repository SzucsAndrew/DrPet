@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section id="weekOrdering">
    <span class="display-6">Week Ordering Hours</span>
    @foreach (var dorcotrsOrder in Model.OrderingHours.GroupBy(o => o.Doctor))
    {
        var collapseName = "collapse" + dorcotrsOrder.Key.Id;
        var headingOne = "headingOne"+ dorcotrsOrder.Key.Id;
        <div id="accordion">
          <div class="card">
            <div class="card-header" id="@headingOne">
              <h5 class="mb-0">
                <button class="btn btn-link" data-bs-toggle="collapse" data-bs-target="#@collapseName" aria-expanded="true" aria-controls="@collapseName">
                  @dorcotrsOrder.Key.Name 
                </button>
              </h5>
            </div>

            <div id="@collapseName" class="collapse" aria-labelledby="@headingOne" data-parent="#accordion">
              <div class="card-body">
                <div class="list-group">
                @foreach (var order in dorcotrsOrder)
                {
                    <a class="list-group-item @(order.Date == Model.CurrentDate.Date ? "list-group-item-primary" : "list-group-item-action")">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@order.Date.ToShortDateString()</h5>
                            <small>@order.Start.ToString("hh\\:mm") - @order.End?.ToString("hh\\:mm")</small>
                        </div>
                        <p class="mb-1">@order.Comment</p>
                    </a>
                }
                </div>
              </div>
            </div>
          </div>
        </div>
    }
</section>
<section id="doctors">
     <span class="display-6">All Doctors:</span>
    <div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var doctor in Model.Doctors)
    {
        <div class="col">
            <div class="card">
              <img src="~/images/profiles/@doctor.ImageName" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">@doctor.Name</h5>
                <p class="card-text">About me: @doctor.Introduce</p>
                <a asp-page="DoctorOrderingHours" asp-route-id="@doctor.Id" class="btn btn-primary">Appointments</a>
              </div>
            </div>
        </div>
    }
    </div>
</section>
<section id="doctorsOrdering" class="col-sm-8">
    <span class="display-6">Month of Ordering Hours</span>
    @{
        var currentDate = DateTime.UtcNow;
    }
    @await Component.InvokeAsync("OrderingHour", new { year = currentDate.Year, month = currentDate.Month})
</section>