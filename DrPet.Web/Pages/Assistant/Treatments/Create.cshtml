@page
@model DrPet.Web.Pages.Assistant.Treatments.CreateModel
@{
}
<h1>Create</h1>

<h4>Treatment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Treatment.AnimalId" class="control-label">Animal</label>
                <select asp-for="Treatment.AnimalId" class ="form-control" asp-items="ViewBag.Animals"></select>
            </div>
            <div class="form-group">
                <label asp-for="Treatment.OwnerId" class="control-label">Owner</label>
                <select asp-for="Treatment.OwnerId" class ="form-control" asp-items="ViewBag.Owners"></select>
            </div>
            <div class="form-group">
                <label asp-for="Treatment.DoctorId" class="control-label">Doctor</label>
                <select asp-for="Treatment.DoctorId" class ="form-control" asp-items="ViewBag.Doctors"></select>
            </div>
           <div class="form-group">
                <label asp-for="Treatment.Appointment" class="control-label"></label>
                <input asp-for="Treatment.Appointment" class="form-control" />
                <span asp-validation-for="Treatment.Appointment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Treatment.Price" class="control-label"></label>
                <input asp-for="Treatment.Price" class="form-control" />
                <span asp-validation-for="Treatment.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Assistant/Animals/Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
